# Environment Configuration Template
# Copy this file to .env.development, .env.staging, or .env.production
# DO NOT commit actual .env files to git

# ==============================================
# ENVIRONMENT
# ==============================================
# Options: development | staging | production
EXPO_PUBLIC_ENVIRONMENT=development

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ==============================================
# API CONFIGURATION
# ==============================================
EXPO_PUBLIC_API_VERSION=1.0.0
EXPO_PUBLIC_API_TIMEOUT=30000

# ==============================================
# FEATURE FLAGS
# ==============================================
EXPO_PUBLIC_ENABLE_LOGGING=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false

# ==============================================
# KEY MANAGEMENT
# ==============================================
# Last key rotation date (YYYY-MM-DD)
KEY_ROTATION_DATE=2025-11-05
# Days until key expiration warning
KEY_EXPIRATION_WARNING_DAYS=30
# Key rotation cycle (days)
KEY_ROTATION_CYCLE_DAYS=180

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Environment
EXPO_PUBLIC_ENVIRONMENT=development

# Globus Bank API (Sandbox)
EXPO_PUBLIC_GLOBUS_API_KEY=your-sandbox-api-key
EXPO_PUBLIC_GLOBUS_SECRET_KEY=your-sandbox-secret-key

# Globus Bank API (Production) - Add when ready
# EXPO_PUBLIC_GLOBUS_API_KEY=your-production-api-key
# EXPO_PUBLIC_GLOBUS_SECRET_KEY=your-production-secret-key